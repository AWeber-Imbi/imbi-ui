{
  "name": "imbi",
  "description": "Imbi Service Management Platform UI",
  "main": "src/js/index.js",
  "scripts": {
    "build": "mkdir -p build && webpack --progress --config webpack.production.js",
    "depcheck": "depcheck",
    "dev-build": "webpack --progress --config webpack.dev.js",
    "eslint": "eslint src/js/**",
    "prettier": "prettier -w src public *.js",
    "prettier-check": "prettier -c src public",
    "serve": "webpack serve --hot --config webpack.dev.js",
    "test": "yarn run eslint && yarn run prettier-check && yarn run depcheck && yarn run jest",
    "watch": "webpack --progress --config webpack.dev.js --watch",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AWeber-Imbi/imbi-ui/"
  },
  "author": "Gavin M. Roy",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "@cybernetex/kbn-es-query": "^1.0.2",
    "@fortawesome/fontawesome-svg-core": "^1.3.0",
    "@fortawesome/free-brands-svg-icons": "^5.15.4",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@headlessui/react": "^1.4.0",
    "@sentry/react": "^6.0.4",
    "@tailwindcss/forms": "^0.5.2",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.3.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": ">=16",
    "autoprefixer": "^10.4.8",
    "babel-loader": "^8.0.4",
    "babel-plugin-dynamic-import-webpack": "^1.1.0",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "browserslist": "^4.19.1",
    "chart.js": "^3.3.2",
    "css-loader": "^6.5.1",
    "depcheck": "^1.3.1",
    "dns-packet": "^5.3.0",
    "elliptic": "6.5.4",
    "eslint": "^8.5.0",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fast-json-patch": "^3.0.0-1",
    "file-loader": "^6.2.0",
    "hosted-git-info": "^4.0.2",
    "husky": "^7.0.0",
    "i18next": "^21.6.3",
    "id128": "^1.6.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.4.5",
    "jsonschema": "^1.4.1",
    "lint-staged": ">=10",
    "lodash": "^4.17.21",
    "luxon": "^3.0.1",
    "node-fetch": "^3.1.0",
    "postcss": "^8.2.10",
    "postcss-import": "^14.0.0",
    "postcss-loader": "^6.2.1",
    "prettier": "^2.0.4",
    "prop-types": "^15.7.2",
    "react": "^18.3.1",
    "react-chartjs-2": "^4.3.1",
    "react-circular-progressbar": "^2.0.3",
    "react-dom": "^18.3.1",
    "react-gravatar": "^2.6.3",
    "react-hot-loader": "^4.13.0",
    "react-i18next": "^11.3.4",
    "react-infinite-scroll-component": "^6.1.0",
    "react-markdown": "^6.0.3",
    "react-router-dom": "^6.3.0",
    "react-sparklines": "^1.7.0",
    "react-syntax-highlighter": "^15.4.3",
    "slugify": "^1.6.4",
    "sort-es": "^1.5.1",
    "ssri": "^8.0.1",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.1.8",
    "typescript": ">= 3.7.0-beta",
    "url": "^0.11.0",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^4.6.0",
    "webpack-merge": "^5.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "\\.(svg)$": "<rootDir>/empty-module.js",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "testEnvironment": "jsdom",
    "verbose": true
  },
  "lint-staged": {
    "*.{css,js,json,jsx}": "prettier --write",
    "*.{js,jsx}": "eslint --cache --fix"
  },
  "packageManager": "yarn@1.22.22"
}
