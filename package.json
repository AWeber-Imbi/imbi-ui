{
  "name": "imbi",
  "description": "Imbi Service Management Platform UI",
  "main": "src/js/index.js",
  "scripts": {
    "build": "mkdir -p build && webpack --progress --mode=production --config webpack.config.js",
    "depcheck": "depcheck",
    "dev-build": "webpack --progress --mode=development --config webpack.config.js",
    "eslint": "eslint src/js/**",
    "prettier": "prettier -w src public",
    "prettier-check": "prettier -c src public",
    "serve": "webpack serve --hot --inline --progress --mode=development --config webpack.config.js",
    "test": "yarn run eslint && yarn run prettier-check && yarn run depcheck && yarn run jest",
    "watch": "webpack --progress --mode=development --config webpack.config.js --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/AWeber/imbi"
  },
  "author": "Gavin M. Roy",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-brands-svg-icons": "^5.15.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "@headlessui/react": "^1.4.0",
    "@sentry/react": "^6.0.4",
    "@tailwindcss/forms": "^0.2.1",
    "@testing-library/dom": "^7.1.4",
    "@testing-library/jest-dom": "^5.3.0",
    "@testing-library/react": "^11.2.3",
    "@testing-library/user-event": "^12.6.0",
    "@types/react": ">=16",
    "autoprefixer": "^10.0.2",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "browserslist": "^4.16.5",
    "chart.js": "^3.3.2",
    "css-loader": "^5.0.1",
    "depcheck": "^1.3.1",
    "dns-packet": "^1.3.2",
    "elliptic": "6.5.4",
    "eslint": "^7.18.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fast-json-patch": "^3.0.0-1",
    "file-loader": "^6.2.0",
    "hosted-git-info": "^2.8.9",
    "husky": ">=4",
    "i18next": "^19.3.4",
    "id128": "^1.6.3",
    "identity-obj-proxy": "^3.0.0",
    "inter-ui": "^3.18.1",
    "jest": "^26.6.3",
    "jsonschema": "^1.4.0",
    "lint-staged": ">=10",
    "lodash": "^4.17.21",
    "luxon": "^1.27.0",
    "node-fetch": "^2.6.1",
    "postcss": "^8.2.10",
    "postcss-import": "^14.0.0",
    "postcss-loader": "^4.1.0",
    "prettier": "^2.0.4",
    "prop-types": "^15.7.2",
    "react": "17.0.1",
    "react-chartjs-2": "^3.0.3",
    "react-circular-progressbar": "^2.0.3",
    "react-dom": "17.0.1",
    "react-gravatar": "^2.6.3",
    "react-hot-loader": "^4.13.0",
    "react-i18next": "^11.3.4",
    "react-markdown": "^6.0.2",
    "react-router-dom": "^5.2.0",
    "react-select": "^4.3.0",
    "react-sparklines": "^1.7.0",
    "react-syntax-highlighter": "^15.4.3",
    "resolve-url-loader": "^3.1.2",
    "slugify": "^1.4.6",
    "ssri": "^6.0.2",
    "style-loader": "^2.0.0",
    "tailwindcss": "^2.0.1",
    "typeface-inter": "^3.15.1",
    "typescript": ">= 3.7.0-beta",
    "webpack": "^4.27.1",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^3.11.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(svg)$": "<rootDir>/empty-module.js",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "verbose": true
  },
  "lint-staged": {
    "*.{css,js,json,jsx}": "prettier --write",
    "*.{js,jsx}": "eslint --cache --fix"
  }
}
